#container
  %h1 All Movies
  
  %table#movies.table
    %thead
      %tr
        %th
        %th Movie Title
        %th Rating
        %th Release Date
        %th More Info
    %tbody
      - @movies.each_with_index do |movie, index|
        %tr
          %td= index + 1
          %td= movie.title
          %td= movie.rating
          %td= movie.release_date
          %td= link_to "More about #{movie.title}", movie_path(movie), :class => 'btn btn-info'

  %div.container
    %div.row
      %form.form-inline{ id: 'search_tmdb_form', :controller => "movies",:action=>"movies/search_tmdb"}
        %div.col
          = link_to 'Add new movie', new_movie_path, :class => 'btn btn-primary'
        %div.col
          = text_field_tag :search_terms, params[:search_terms], id: 'search_terms', :class => "form-control mr-sm-2"
        %div.col
          %button.btn.btn-outline-success.my-2.my-sm-0{ type: 'submit' } Search TMDb
              
